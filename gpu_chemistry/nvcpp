SUFFIXES += .C
SUFFIXES += .cu

c++WARN     = \
    -Wall -Wextra \
    --diag_suppress=111,128,177,185,612,998,1098 \
    --display_error_number

# Suppress some warnings for flex++ and CGAL
c++LESSWARN = -Wno-old-style-cast -Wno-unused-local-typedefs -Wno-array-bounds

#CC          = nvc++ -std=c++17 -stdpar=gpu -gpu=nomanaged -O2 -fast
#CC          = nvc++ -O2 -std=c++17 -stdpar=gpu -gpu=nomanaged -nofma
#CC          = nvc++ -std=c++17 -stdpar=gpu -gpu=nomanaged -O0 -nofma
#CC          = nvc++ -std=c++17 -stdpar=gpu -gpu=nomanaged
CC          = nvc++ -std=gnu++17 -stdpar=gpu -gpu=nomanaged -O3 -fast --gcc-toolchain=g++

#include $(DEFAULT_RULES)/c++$(WM_COMPILE_OPTION)

ptFLAGS     = -DNoRepository #-ftemplate-depth-100

c++FLAGS    = $(GFLAGS) $(c++WARN) $(c++DBUG) $(ptFLAGS) \
              $(LIB_HEADER_DIRS) -fPIC

#NOTE! TURN THIS ON TO GET O3
#c++FLAGS    = $(GFLAGS) $(c++WARN) $(c++OPT) $(c++DBUG) $(ptFLAGS) \
#              $(LIB_HEADER_DIRS) -fPIC

Ctoo        = $(WM_SCHEDULER) $(CC) $(c++FLAGS) -c $< -o $@
cxxtoo      = $(Ctoo)
cctoo       = $(Ctoo)
cpptoo      = $(Ctoo)
cutoo       = $(Ctoo)

LINK_LIBS   = $(c++DBUG)

LINKLIBSO   = $(CC) $(c++FLAGS) -shared \
              -Xlinker --add-needed -Xlinker --no-as-needed

LINKEXE     = $(CC) $(c++FLAGS) \
              -Xlinker --add-needed -Xlinker --no-as-needed
